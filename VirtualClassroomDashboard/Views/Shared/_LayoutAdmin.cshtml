<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VirtualClassroomDashboard</title>
    <link rel="icon" href="~/images/favicon.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!--03/11/21 - AK - logo in nav and navigation links updated-->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/vcdLogo.png" alt="Virtual Classroom Dashboard Logo" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span><img class="navbarIcon" src="~/images/NavIcon.png" alt="nav bar icon" /></span>
                </button>
                <div class="navigation navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">LOGOUT</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container userLayCon">
        <div class="sideNav">
            <ul class="secNav">
                <!--Main Nav-->
                <li>
                    <!--Dash-->
                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminDash">Dashboard</a>
                </li>
                <!--Sub Nav - Should display schools as a subnav of dashboard-->
                <li class="subNav">
                    <!--Schools-->
                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminDash">Schools</a>
                </li>
                <!--Sub sub nav - for Schools including Zoom, Students, and Educators-->
                <li class="subSubNav"><!--Zoom-->
                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminDash">Zoom</a>
                </li>
                <li class="subSubNav"><!--Students-->
                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminDash">Students</a>
                </li>
                <li class="subSubNav"><!--Educators-->
                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminDash">Educators</a>
                </li>
                <!--SubNav-->
                <li class="subNav">
                    <!--Settings-->
                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminDash">Settings</a>
                </li>
                <li class="subNav">
                    <!--Profile-->
                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminDash">Profile</a>
                </li>
                <!--main nav-->
                <li>
                    <!--Account-->
                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AdminDash">Account</a>
                </li>
            </ul>
        </div>
        <main role="main" class="secLayout pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
                <!--03/11/21 AK logo in footer and copyright information-->
            <p class="footerp">
                <img src="~/images/vcdLogo.png" alt="Virtual Classroom Dashboard Logo" width="70px" />
                &copy;2021
            </p>
                

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
